<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:id="@+id/contectLinearLayou"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/download"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/title"/>

                <FrameLayout
                    android:layout_above="@+id/title"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/cornerdesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_date_range"/>


                    <TextView
                        android:id="@+id/dateFormet"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 July 2019"
                        android:paddingRight="5dp"/>

                </FrameLayout>

            <TextView
                android:id = "@+id/title"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight="1"
                android:layout_below="@id/imageView"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="3"
                android:text="‘Invisible hands': How millions of domestic workers fare ‘Invisible hands': How millions of domestic workers fare Global Voices' special coverage
            of COVID-19 offers a view on the pandemic from the perspective of our global communityGlobal Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our
            global communityGlobal Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global communityGlobal Voices' special coverage of COVID-19
            offers a view on the pandemic from the perspective of our global community"
                />

            <TextView
                android:id = "@+id/detail"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:maxLines="5"
                android:layout_below="@id/title"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Global Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global community
              Global Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global community
              Global Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global community
              Global Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global community
              Global Voices' special coverage of COVID-19 offers a view on the pandemic from the perspective of our global community"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/detail"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D3D3D3"/>

            <RelativeLayout
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hoster"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="date" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/shareImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toLeftOf="@+id/readMore"
                    android:background="#fff"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_share" />

                <TextView
                    android:id="@+id/readMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="3dp"
                    android:text="Read More" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





